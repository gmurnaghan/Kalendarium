  <div class="field">
    <%= form.label :column4, "Column 4" %>
    <%= form.select :column4, Manuscript::COLUMN_TYPES, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :column5, "Column 5" %>
    <%= form.select :column5, Manuscript::COLUMN_TYPES, include_blank: true %>
  </div>

  <br>
  Color Weight:

  <table>
    <td>
      <div class="field">
        <%= form.label :color_weighting_black, 'Black' %>
        <%= form.number_field :color_weighting_black, min: 0, max: 7, id: :manuscript_color_weighting_black %>
      </div>
    </td>

    <td>
      <div class="field">
        <%= form.label :color_weighting_blue, 'Blue' %>
        <%= form.number_field :color_weighting_blue, min: 0, max: 7, id: :manuscript_color_weighting_blue %>
      </div>
    </td>

    <td>
      <div class="field">
        <%= form.label :color_weighting_green, 'Green' %>
        <%= form.number_field :color_weighting_green, min: 0, max: 7, id: :manuscript_color_weighting_green %>
      </div>
    </td>

    <td>
      <div class="field">
        <%= form.label :color_weighting_pink, 'Pink' %>
        <%= form.number_field :color_weighting_pink, min: 0, max: 7, id: :manuscript_color_weighting_pink %>
      </div>
    </td>

    <td>
      <div class="field">
        <%= form.label :color_weighting_red, 'Red' %>
        <%= form.number_field :color_weighting_red, min: 0, max: 7, id: :manuscript_color_weighting_red %>
      </div>
    </td>

    <td>
      <div class="field">
        <%= form.label :color_weighting_purple, 'Purple' %>
        <%= form.number_field :color_weighting_purple, min: 0, max: 7, id: :manuscript_color_weighting_purple %>
      </div>
    </td>

    <td>
      <div class="field">
        <%= form.label :color_weighting_gold, 'Gold' %>
        <%= form.number_field :color_weighting_gold, min: 0, max: 7, id: :manuscript_color_weighting_gold %>
      </div>
    </td>
  </table>


  <div class="field">
    <%= form.label :has_shading, 'Is there shading?' %>
    <%= form.check_box :has_shading, id: :manuscript_has_shading %>
  </div>

