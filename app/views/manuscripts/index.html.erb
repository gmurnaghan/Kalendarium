  <br>

  <div class="row">
    <div class="col-9">
      <h1>All Manuscripts</h1>
    </div>

    <div class="col-3">
      <%= link_to 'New Manuscript', new_manuscript_path, class: "btn btn-primary btn-lg btn-block" %>
    </div>
  </div>

  <br>

  <div class="row">
    <div class="col-2"><h5>Shelfmark</h5></div>
    <div class="col-3"><h5>Manuscript</h5></div>
    <div class="col-4"><h5>Calendar Pages</h5></div>
    <div class="col-3" ></div>
  </div>

  <% @manuscripts.each_with_index do |manuscript, index| %>
    <% grade = 'dark-grade' if index.even? %>
    <div class="row table-row <%= grade %>">
      <div class="col-2"><%= manuscript.shelfmark %></div>
      <div class="col-3"><%= manuscript.name %></div>
      <div class="col-4">



        <div class="row">
        <!--   <div class="btn-group btn-group-sm"> -->
            <%# manuscript.calendar_pages.sort_by(&:folio_ordinal).each do |c_p| %>
            <% manuscript.calendar_pages.sort.each do |c_p| %>
              <%= link_to c_p.folio, calendar_page_path(c_p), class: 'cal-page-link', title: "<span class='index-tooltip gold-text'>#{c_p.date_range}</span>", data: {toggle: 'tooltip', html: true} %>
              <%#= content_tag :a, c_p.folio, class: 'cal-modal-link gold-text', data: {toggle: 'modal', target: '#calendar_page_modal'} %> <!-- , class: 'btn btn-secondary'  -->
              &nbsp;
            <% end %>
        <!--   </div> -->
        </div>

      </div>
      <div class="col-3 btn-group"> <!-- ok to put both classes in one div? -->
        <%= link_to 'details', manuscript, class: "btn btn-secondary" %>
        <%= link_to 'edit', edit_manuscript_path(manuscript), class: "btn btn-secondary" %>
        <%= link_to 'delete', manuscript, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
      </div>
    </div>
  <% end %>


  <br>

  <%#= link_to 'New Manuscript', new_manuscript_path, class: "btn btn-primary" %>
</div>


