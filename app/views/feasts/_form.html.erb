<%= form_for [@calendar_page, @feast] do |form| %>

  <div class="field">
    <%= form.label :saint_name %>
    <%= form.select :saint_name, Feast::SAINT_NAMES, include_blank: true %>
  </div>

  <div class="field">
  <table>
    <%= form.label :saint_attributes %>
    <% Feast::SAINT_ATTRIBUTES.each do |st_attr| %>
      <td>
        <% target = 'st_attr_' + st_attr.chop %>
        <%= form.label target, st_attr %>
        <%= form.check_box target %>
      </td>
    <% end %>
  </table>
  </div>

  <div class="field">
    <%= form.label :saint_location %>
    <%= form.text_field :saint_location %>
  </div>


  <div class="field">
    <%= form.label :modifier %>
    <%= form.text_field :modifier %>
  </div>


  <div class="field">
    <%= form.label :shading %>
    <%= form.text_field :shading %>
  </div>


  <div class="field colors">
    <%= form.label :color%>
    <%= form.select :color, Manuscript::COLORS %>
  </div>

  <select>
    <% Manuscript::COLORS.each do |color| %>
      <option style=<%="color:#{color.downcase};"%> value=<%= color %> id=<%= 'color_' + color.downcase %>><%= color %></option>
    <%  end %>
  </select>

  <div class="field">
    <%= form.label :transcription %>
    <%= form.text_area :transcription %>
  </div>

  <br>

  <%= form.hidden_field :month_number %>
  <%= form.hidden_field :day_number %>
  <%= form.hidden_field :manuscript_id %>

  <div class="field">
    <%= form.submit %>
  </div>
<% end %>
