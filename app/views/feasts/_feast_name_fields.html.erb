  <div class="row">

    <div class="form-group col-5">
        <%= fnf.label :name_id, 'Name' %>
        <%= fnf.collection_select :name_id, Name.all.to_a << Name.new(name: 'other'), :id, :name, {include_blank: true},  class: 'name-selection form-control'  %>
    </div>

    <div class="form-group col-5">
      <div>
        <%= fnf.label :saint_attributes, 'Attributes' %>
        <br>
        <% st_attr = Kal::SaintAttributes %>

        <%= fnf.select :saint_attributes, grouped_options_for_select(Kal::SaintAttributes::OPTGROUPS, fnf.object.saint_attributes), {} , multiple: 'multiple', class: 'multiselect' %>
      </div>
    </div>

    <div class="col-2">
      <%= fnf.hidden_field :_destroy %>

      <%= link_to 'x', '#', class: 'remove-feast-name btn btn-danger btn-lg btn-block' if @flag %>
      <% @flag = true %><!-- is this ok? -->
    </div>

  </div>

  <div class="form-group hidden name-field" name="name-field" >
    <%= fnf.text_field :other_name, placeholder: 'add name', class: 'form-control' %>
  </div>


  <div class="form-group col-8">
    <%= fnf.label :saint_location, 'Location' %>
    <%= fnf.text_field :saint_location, class: "form-control" %>
  </div>
