<fieldset >
  <hr>
  <div class="row">
    <div class="form-group col-4">
        <%= fnf.label :name_id, 'Name' %>
        <%= fnf.collection_select :name_id, Name.all.to_a.sort_by(&:name) << Name.new(name: 'Other (Add new name)'), :id, :name, {include_blank: true},  class: 'name-selection form-control'  %>
        <%#= fnf.text_field :name_id, class: "name-input form-control"  %>
    </div>

    <div class="form-group col-3">
      <%= fnf.label :saint_location, 'Location' %>
      <%= fnf.text_field :saint_location, class: "form-control" %>
    </div>

    <div class="form-group col-3">
      <div>
        <%= fnf.label :saint_attributes, 'Attributes' %>
        <br>
        <% st_attr = Kal::SaintAttributes %>

        <%= fnf.select :saint_attributes, grouped_options_for_select(Kal::SaintAttributes::OPTGROUPS, fnf.object.saint_attributes), {} , multiple: 'multiple', class: 'multiselect' %>
      </div>
    </div>

    <div class="col-2">
      <%= fnf.label :'_', '' %>
      <%= fnf.hidden_field :_destroy %>
      <% if @flag %>
        <%#= link_to_add_feast_name '+', locals[:form], class: 'btn btn-kal-special btn-lg btn-block' %></div>
      <% else %>
        <%= fnf.label :nil, '&nbsp;'.html_safe %>
        <%= link_to 'X', '#', class: 'remove-feast-name btn btn-danger //btn-lg btn-block' %>
      <% end %>
      <% @flag = true %><!-- is this ok? -->
    </div>
  </div>

  <div class="name-form-location"></div>
</fieldset>










